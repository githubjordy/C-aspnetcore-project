@*@model List<PluralsightUser>*@
@model PluralsightUser
@{
    ViewData["Title"] = "Edit";
}


<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <h1 class="text-center">Edit Student</h1>
        <form asp-controller="Home" asp-action="Edit" method="post" class="form-horizontal">
          

            <input asp-for="UserName"type="hidden" class="form-control">

            <div class="form-group">
                <label asp-for="adress" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="adress" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="postcode" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="postcode" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="woonplaats" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="woonplaats" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="naam" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="naam" class=" form-control" />
                </div>
            </div>

            <div class="form-group">

                <label asp-for="deadline" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="deadline" id="fromDate" class="datepicker form-control" />
                </div>

            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All"></div>
        </form>

    </div>
</div>


